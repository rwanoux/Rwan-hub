<header class="container-fluid">
	<nav>
		<button data-target="main-sidenav">
			{{ ux_icon('tabler:menu-2') }}
		</button>
		<a href="{{path('app_home')}}">
			<img
				src="{{asset('img/avatar.webp')}}"
				alt=""
			>

		</a>
		<ul>


			<li>
				<div class="theme">
					{{ ux_icon('tabler:moon-filled') }}
					<label
						data-tooltip="darkmode"
						data-placement="bottom"
					>
						<input
							id="lightmode"
							name="lightmode"
							type="checkbox"
							role="switch"
						/>

